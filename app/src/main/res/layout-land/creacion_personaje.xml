<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_creacion_personaje"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fondo"
    android:onClick="irCreacionNombre">

    <TextView
        android:id="@+id/txt_tituloCreacionPersonaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/txt_titulo_creacion_personaje"
        android:textColor="@color/color_titulo"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_personaje_cerdo"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="15dp"
        android:background="@color/color_transparente"
        android:foreground="@drawable/icono_cerdo_128"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="irCreacionNombre"
        app:backgroundTint="@color/color_transparente"
        app:layout_constraintEnd_toStartOf="@+id/btn_personaje_gato"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_tituloCreacionPersonaje" />

    <Button
        android:id="@+id/btn_personaje_gato"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="15dp"
        android:background="@color/color_transparente"
        android:foreground="@drawable/icono_gato_128"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="irCreacionNombre"
        app:backgroundTint="@color/color_transparente"
        app:layout_constraintEnd_toStartOf="@+id/btn_personaje_perro"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_personaje_cerdo"
        app:layout_constraintTop_toBottomOf="@+id/txt_tituloCreacionPersonaje" />

    <Button
        android:id="@+id/btn_personaje_perro"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="15dp"
        android:background="@color/color_transparente"
        android:foreground="@drawable/icono_perro_128"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="irCreacionNombre"
        app:backgroundTint="@color/color_transparente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_personaje_gato"
        app:layout_constraintTop_toBottomOf="@+id/txt_tituloCreacionPersonaje" />

    <Button
        android:id="@+id/btn_personaje_zorro"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:background="@color/color_transparente"
        android:foreground="@drawable/icono_zorro_128"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="irCreacionNombre"
        app:backgroundTint="@color/color_transparente"
        app:layout_constraintEnd_toStartOf="@+id/btn_personaje_paloma"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_personaje_cerdo" />

    <Button
        android:id="@+id/btn_personaje_paloma"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:background="@color/color_transparente"
        android:foreground="@drawable/icono_paloma_128"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="irCreacionNombre"
        app:backgroundTint="@color/color_transparente"
        app:layout_constraintEnd_toStartOf="@+id/btn_personaje_vaca"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_personaje_zorro"
        app:layout_constraintTop_toBottomOf="@+id/btn_personaje_gato" />

    <Button
        android:id="@+id/btn_personaje_vaca"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:background="@color/color_transparente"
        android:foreground="@drawable/icono_vaca_128"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="irCreacionNombre"
        app:backgroundTint="@color/color_transparente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_personaje_paloma"
        app:layout_constraintTop_toBottomOf="@+id/btn_personaje_perro" />
</androidx.constraintlayout.widget.ConstraintLayout>